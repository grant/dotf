{
  "name": "dotf",
  "description": "Dotfile manager",
  "version": "2.0.2",
  "type": "module",
  "files": [
    "lib"
  ],
  "exports": "./lib/index.js",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "engines": {
    "node": "^12.20.0 || ^14.13.1 || >=16.0.0"
  },
  "license": "MIT",
  "author": "Grant Timmerman",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/grant/dotf.git"
  },
  "bugs": {
    "url": "https://github.com/grant/dotf/issues"
  },
  "homepage": "https://github.com/grant/dotf#readme",
  "scripts": {
    "build": "tsc --project tsconfig-lib.json",
    "dryrun": "npm publish --dry-run",
    "lint": "xo && echo 'No lint errors. All good!'",
    "test": "npm run lint && c8 ava",
    "watch": "tsc --project tsconfig.json --watch"
  },
  "dependencies": {
    "graceful-fs": "^4.2.10",
    "jsonfile": "^6.1.0"
  },
  "devDependencies": {
    "@types/graceful-fs": "^4.1.6",
    "@types/jsonfile": "^6.1.1",
    "@types/node": "^20.0.0",
    "ava": "^5.1.0",
    "c8": "^8.0.0",
    "prettier": "^2.8.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.2",
    "xo": "^0.54.1"
  },
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "files": [
      "test/**.ts"
    ],
    "nodeArguments": [
      "--loader=ts-node/esm",
      "--experimental-specifier-resolution=node"
    ]
  },
  "xo": {
    "ignores": [
      "**.js"
    ],
    "space": 2,
    "rules": {
      "no-bitwise": "off",
      "unicorn/prefer-node-protocol": "warn",
      "@typescript-eslint/consistent-type-definitions": "off",
      "object-shorthand": "off"
    },
    "prettier": true
  }
}
