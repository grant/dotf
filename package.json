{
  "name": "dotf",
  "description": "Dotfile manager",
  "version": "1.5.1",
  "license": "MIT",
  "author": "Grant Timmerman",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/grant/dotf.git"
  },
  "bugs": {
    "url": "https://github.com/grant/dotf/issues"
  },
  "homepage": "https://github.com/grant/dotf#readme",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "dryrun": "npm publish --dry-run",
    "lint": "xo && echo 'No lint errors. All good!'",
    "test": "npm run lint && c8 ava test/test.ts",
    "watch": "tsc --project tsconfig.json --watch"
  },
  "engines": {
    "node": ">= 10.3.0"
  },
  "dependencies": {
    "graceful-fs": "^4.2.4",
    "jsonfile": "^6.1.0"
  },
  "devDependencies": {
    "@types/graceful-fs": "^4.1.4",
    "@types/jsonfile": "^6.0.0",
    "@types/node": "^10.17.49",
    "ava": "^3.14.0",
    "c8": "^7.3.5",
    "prettier": "^2.2.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3",
    "xo": "^0.36.1"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "failWithoutAssertions": false
  }
}
